# bash-completion
if [ -f `brew --prefix`/etc/bash_completion ]; then
    . `brew --prefix`/etc/bash_completion
fi

# nodejs
export NODE_PATH='/usr/local/lib/node_modules'

# elasticsearch
export ES_CLASSPATH=~/Projects/elasticsearch/bin/

# maven
export M2_HOME=/usr/local/apache-maven/apache-maven-3.0.4
export M2=$M2_HOME/bin

# PATH
# PATH > maven
export PATH=$M2:$PATH
# PATH > elasticsearch
export PATH=$PATH:~/Projects/elasticsearch/bin
# PATH > rvm
export PATH=$PATH:~/.rvm/bin 
# PATH > Python 2.7
export PATH=/Library/Frameworks/Python.framework/Versions/2.7/bin:$PATH
# Por conta do eclipse para android
export PATH=/opt/local/bin:$PATH
# Android SDK
export PATH=$PATH:/Users/bardusco/Projects/android-sdk-macosx/tools/:/Users/bardusco/Projects/android-sdk-macosx/platform-tools/:/Users/bardusco/Projects/android-sdk-macosx/tools/proguard/bin/:/Users/bardusco/Projects/android-sdk-macosx/build-tools/17.0.0/

# Virtualenv
source /Library/Frameworks/Python.framework/Versions/2.7/bin/virtualenvwrapper.sh

# JDK7
export JAVA_HOME=$(/usr/libexec/java_home)

# DOCKER emulated with Virtualbox
export DOCKER_HOST=localhost
